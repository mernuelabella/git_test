      </div>  
      <div class="homepage_content clearfix">
        <div class="container">
          <div class="sixteen columns">
          	<div class="section">
              {% include 'page-multi-column', content: pages[settings.homepage].content %}
          	</div>
          </div>
        </div>
      </div>
      <div class="container content" style="padding-top: 20px">
    {% endif %}
  {% endif %}

