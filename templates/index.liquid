      {% assign linklist = linklists[settings.frontpage_linklist] %}
      {% assign collections_per_row = settings.frontpage_collections_per_row %}
      {% include 'collection-loop' %}
    {% endif %}
  {% endif %}

  {% if position == "3" %}
    {% if settings.frontpage_collection != blank %}
      {% assign collection = '' %}
      {% assign products = collections[settings.frontpage_collection].products %}
      {% assign products_per_row = settings.frontpage_products_per_row %}
      
      <div class="sixteen columns">
        <div class="section">
          <h2 class="title">
            {% comment %}
              {{ collections[settings.frontpage_collection].title }}
            {% endcomment %}
            FEATURED PRODUCTS
          </h2>
          {% include 'product-loop' %}
        </div>
      </div>
      <div class="sixteen columns clickCom">
        <a href="/collections/all">CLICK HERE TO SEE OUR COMPLETE ONLINE CATALOG</a>
      </div>
    {% endif %}
  {% endif %}

  {% if position == "4" %}
    {% if settings.frontpage_collection2 != blank %}
      {% assign collection = '' %}
      {% assign products = collections[settings.frontpage_collection2].products %}
      {% assign products_per_row = settings.frontpage_products_per_row %}
      
      <div class="sixteen columns">
        <div class="section">
          <h2 class="title">{{ collections[settings.frontpage_collection2].title }}</h2>
          {% include 'product-loop' %}
        </div>
      </div>
    {% endif %}
  {% endif %}

  {% if position == "5" %}
    {% if settings.frontpage_collection_full != blank %}
      <div class="sixteen columns clearfix" itemtype="http://schema.org/ItemList">
        {% assign collection = '' %}
        {% assign products = collections[settings.frontpage_collection_full].products %}
        {% include 'product-full' %}
      </div>
    {% endif %}
  {% endif %}

