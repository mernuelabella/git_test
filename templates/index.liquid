    {% endif %}
  {% endif %}

  {% if position == "9" %}
    {% if settings.blog_widget %}
      <div class="{% if settings.twitter_widget != blank %}ten{% else %}sixteen{% endif %} columns">
        <h4 class="title">
          <a href="{{ blogs[settings.blog_widget_select].url }}">{{ blogs[settings.blog_widget_select].title }}</a>
        </h4>

        {% for article in blogs[settings.blog_widget_select].articles limit: settings.home_page_articles %}
            <div class="clearfix article">
              {% if article.image %}
                <div class="{% if settings.twitter_widget != blank %}four{% else %}seven{% endif %} columns alpha">
                  <a href="{{ article.url }}" title="{{ article.title | escape }}">
                    <img src="{{ article.image | img_url: 'grande' }}" alt="{{ article.title | escape }}" />
                  </a>
                </div>
                <div class="{% if settings.twitter_widget != blank %}six{% else %}nine{% endif %} columns omega">
              {% else %}
                <div>
              {% endif %}

                <h5 class="sub_title">
                  <a href="{{ article.url }}" title="{{ article.title | escape }}">{{ article.title }}</a>
                </h5>
                <p class="blog_meta">
                  {% if settings.blog_author %}
                    <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                  {% endif %}

                  {% if settings.blog_date %}
                    <span>{{ article.published_at | date: format: "month_day_year" }}</span>
                  {% endif %}
                  
                  {% if settings.blog_comment_count %}
                    {% if settings.disqus_enabled %}
                      <span>
                        <a href="{{ article.url }}#disqus_thread" data-disqus-identifier="{{ article.id }}" class="disqus-comment-count">{{ 'blogs.counts.comments_with_count' | t: count: 0 }}</a>
                      </span>
                    {% elsif article.comments_enabled? and article.comments_count > 0 %}
                      <span>
                        <a href="{{ article.url }}#comments">{{ 'blogs.counts.comments_with_count' | t: count: article.comments_count }}</a>
                      </span>
                    {% endif %}
                  {% endif %}
                </p>

                {% if article.excerpt != blank %}
                  <div class="excerpt">{{ article.excerpt }}</div>              
                {% endif %}   
                {% if settings.read_more_link %}
                  <p class="continue_reading">
                    <a href="{{ article.url }}" title="{{ article.title | escape }}" class="action_button">{{ 'blogs.general.continue_reading_html' | t }}</a>
                  </p>
                {% endif %}    
              </div>
            </div>
        {% endfor %}
        </div>
    {% endif %}

    {% if settings.twitter_widget != blank %}
      <div class="{% if settings.blog_widget %}five offset-by-one{% else %}sixteen{% endif %} columns">
          <h4 class="title"><a href="https://twitter.com/{{ settings.twitter_username | replace: "@", "" | strip }}" target="_blank">{{ 'home_page.tweets' | t }}</a></h4>
          <a class="twitter-timeline" href="https://twitter.com/{{ settings.twitter_username | replace: "@", "" | strip }}" data-theme="{{ settings.twitter_theme }}" data-tweet-limit="{{ settings.tweet_count }}" data-widget-id="319998048782647298" data-screen-name="{{ settings.twitter_username | replace: "@", "" | strip }}" data-chrome="noheader nofooter noborders transparent" data-link-color="{{ settings.link_color }}" data-heading-style="color:{{ settings.link_color }};font-size:{{ settings.regular_font_size }}px;font-family: {{ settings.regular_font | replace: 'Google_', '' | replace: '+', ' ' | replace: '"', '' }}"></a>
          <script defer>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
      </div>
    {% endif %}
